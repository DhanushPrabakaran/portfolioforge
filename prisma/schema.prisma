datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String?
  collaborators String?
  link           String
  year          Int
  image         String?
  Client        String?
  User          User?   @relation(fields: [userId], references: [id])
  userId        String? @db.ObjectId
}

model Experience {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  from        String
  end         String
  Title       String
  coworkers   String?
  location    String?
  url         String?
  Company     String?
  Description String?
  User        User?   @relation(fields: [userId], references: [id])
  userId      String? @db.ObjectId
}

model Message {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name String
  message   String
  date      DateTime     @default(now())
  User        User?   @relation(fields: [userId], references: [id])
  userId      String? @db.ObjectId
}

model User {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  email      String       @unique
  name       String?
  Dname      String?
  role       String
  image      String
  website    String
  about      String
  projects   Project[]
  experience Experience[]
  message Message[]
}

